<!doctype html>
<html lang="en">
<head>
    {{>parts/head}}
    <title>Accounts</title>
</head>
<body>
{{>parts/navbar}}
<div class="container mt-2">
    <table class="table">
        <thead class="table-success">
        <tr><th>name</th><th>owner</th><th>currency</th><th>balance</th><th>opening date</th><th></th><th></th></tr>
        </thead>
    {{#accounts}}
        <tr>
            <td>{{name}}</td>
            <td>{{owner.username}}</td>
            <td>{{currency}}</td>
            <td>{{balance}}</td>
            <td>{{openingDate}}</td>
            <td>
                <a href="/accounts/edit/{{id}}" class="btn btn-outline-primary" role="button" aria-pressed="true">Edit</a>
            </td>
            <td>
                <a href="/accounts/delete/{{id}}" class="btn btn-outline-danger" role="button" aria-pressed="true">Delete</a>
            </td>
             </tr>
   {{/accounts}}
    </table>
    <a href="/accounts/add" class="btn btn-outline-primary" role="button" aria-pressed="true">Add new account</a>

</div>

{{>parts/script_on}}
</body>
</html>